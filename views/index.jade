extends layout

block head
    link(rel='stylesheet', href='css/vendor/xcharts.css')

    script(src='js/vendor/underscore/underscore.js')
    script(src='js/vendor/d3.js')
    script(src='js/vendor/xcharts.js')
    script(src='js/main.js')

block content
    figure#myChart

    table.cdns(cellpadding=0, cellspacing=0)
        thead
            tr
                each type in types
                    th(class= type.toLowerCase() + 'Header')= type
        tbody
            each cdn in cdns
                tr
                    td
                        a(href= cdn.link)= cdn.name
                    td= cdn.uptime
                    td= cdn.latency
                    td= cdn.projects
                    td= cdn.provider
